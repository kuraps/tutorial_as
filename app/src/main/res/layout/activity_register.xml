<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    tools:context=".RegisterAct">


    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/mregular"
        android:text="Register"
        android:textColor="@color/blackPrimary"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/mbold"
        android:text="Acc"
        android:textColor="@color/bluePrimary"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/tv_sign"
        app:layout_constraintTop_toTopOf="@+id/tv_sign" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/mregular"
        android:text="Fill your account data"
        android:textColor="@color/blackPrimary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingBottom="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_summary">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mregular"
            android:text="Username"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:padding="10dp"
            android:textColor="@color/blackPrimary" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mregular"
            android:text="Full Name"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:padding="10dp"
            android:textColor="@color/blackPrimary" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mregular"
            android:text="Email"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:padding="10dp"
            android:textColor="@color/blackPrimary" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mregular"
            android:text="Password"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/blackPrimary" />
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:id="@+id/back"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_white_primary"
                    android:fontFamily="@font/mmedium"
                    android:text="CANCEL"
                    android:textColor="@color/blackPrimary"
                    android:textSize="18sp" />

                <Button
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:id="@+id/regist"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_blue_primary"
                    android:fontFamily="@font/mmedium"
                    android:text="REGISTER NOW"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>