<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    tools:context=".SignInAct">


    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/mregular"
        android:text="Sign"
        android:textColor="@color/blackPrimary"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_summary"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/mbold"
        android:text="In"
        android:textColor="@color/bluePrimary"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/tv_sign"
        app:layout_constraintTop_toTopOf="@+id/tv_sign" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/mregular"
        android:text="Fill your account data"
        android:textColor="@color/blackPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username"
            android:text="Username"
            android:fontFamily="@font/mregular"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp"/>

        <EditText
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:textColor="@color/blackPrimary"/>

        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_password"
            android:text="Password"
            android:fontFamily="@font/mregular"
            android:textColor="@color/blackPrimary"
            android:textSize="20sp"/>

        <EditText
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_selector"
            android:fontFamily="@font/mregular"
            android:textColor="@color/blackPrimary"/>

        <Button
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:background="@drawable/btn_blue_primary"
            android:text="SIGN IN"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/mmedium"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/create_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mbold"
        android:text="Create New Account "
        android:textAlignment="center"
        android:textColor="@color/bluePrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mmedium"
        android:text="Forgot Password "
        android:textAlignment="center"
        android:textColor="@color/blackPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_new_account" />

</androidx.constraintlayout.widget.ConstraintLayout>